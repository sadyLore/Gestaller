<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="22dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ðŸ”¹ TÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo trabajo"
            android:textColor="@color/gestaller_blue"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ”¹ Cliente -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente (nombre)"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etClientName"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="14dp"
            android:hint="Ingresar nombre"
            android:background="@drawable/rounded_border_button"
            android:paddingHorizontal="20dp"
            android:textColor="@color/black" />

        <!-- ðŸ”¹ Marca y Modelo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="10dp">

            <Spinner
                android:id="@+id/spBrand"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_border_button"
                android:paddingHorizontal="16dp" />

            <EditText
                android:id="@+id/etModel"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:hint="Modelo"
                android:background="@drawable/rounded_border_button"
                android:paddingHorizontal="20dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- ðŸ”¹ Patente y URL imagen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/etPlate"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:hint="Patente"
                android:background="@drawable/rounded_border_button"
                android:paddingHorizontal="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etImageUrl"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:hint="URL imagen"
                android:background="@drawable/rounded_border_button"
                android:paddingHorizontal="20dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- ðŸ”¹ Servicios -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/servicesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ”¹ Notas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notas"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="Agregar nota"
            android:background="@drawable/rounded_border_button"
            android:paddingHorizontal="20dp"
            android:textColor="@color/black"
            android:layout_marginBottom="22dp" />

        <!-- ðŸ”¹ Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:background="@drawable/rounded_border_button"
                android:textColor="@color/gestaller_blue" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guardar"
                android:textAllCaps="false"
                android:background="@drawable/rounded_border_button"
                android:textColor="@color/gestaller_blue" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

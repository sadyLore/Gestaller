<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="22dp">

    <!-- ðŸ”¹ Scroll general -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ðŸ”¹ Logo -->

            <!-- ðŸ”¹ TÃ­tulo -->

            <!-- ðŸ”¹ Cliente -->

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="132dp"
                android:layout_height="31dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/gestaller_logo" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="Nuevo trabajo"
                android:textColor="@color/gestaller_blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Cliente (nombre)"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etClientName"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_border_button"
                android:hint="Ingresar nombre"
                android:paddingHorizontal="20dp"
                android:textColor="@color/black" />

            <!-- ðŸ”¹ Marca y Modelo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="10dp">

                <!-- Columna: Marca -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marca"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spBrand"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/rounded_border_button"
                        android:paddingHorizontal="16dp" />
                </LinearLayout>

                <!-- Columna: Modelo -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modelo"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spModel"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/rounded_border_button"
                        android:paddingHorizontal="16dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ðŸ”¹ Patente y URL imagen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/etPlate"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:hint="Patente"
                    android:background="@drawable/rounded_border_button"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/etImageUrl"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:hint="URL imagen"
                    android:background="@drawable/rounded_border_button"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- ðŸ”¹ Servicios -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicio"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/servicesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ”¹ Notas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notas"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Agregar nota"
                android:background="@drawable/rounded_border_button"
                android:paddingHorizontal="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="22dp" />

            <!-- ðŸ”¹ Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_button"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_button"
                    android:text="Guardar"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

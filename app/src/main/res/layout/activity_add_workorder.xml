<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="22dp"
    android:background="@drawable/bg_dialog_white"
    android:layout_gravity="center"
    android:clipToOutline="true">

    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ðŸ”¹ Logo -->
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="180dp"
                android:layout_height="31dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/gestaller_logo" />

            <!-- ðŸ”¹ TÃ­tulo -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="Nuevo trabajo"
                android:textColor="@color/gestaller_blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- ðŸ”¹ Cliente -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente (nombre)"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etClientName"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_border_button"
                android:hint="Ingresar nombre"
                android:paddingHorizontal="20dp"
                android:textColor="@color/black" />

            <!-- ðŸ”¹ TelÃ©fono -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TelÃ©fono"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etClientPhone"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_border_button"
                android:hint="NÃºmero de telÃ©fono"
                android:inputType="phone"
                android:paddingHorizontal="20dp"
                android:textColor="@color/black" />

            <!-- ðŸ”¹ Marca y Modelo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marca"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spBrand"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/rounded_border_button"
                        android:paddingHorizontal="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modelo"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spModel"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/rounded_border_button"
                        android:paddingHorizontal="20dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ðŸ”¹ Chapa -->
            <EditText
                android:id="@+id/etPlate"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Chapa"
                android:background="@drawable/rounded_border_button"
                android:paddingHorizontal="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <!-- ðŸ”¹ BotÃ³n para tomar foto -->
            <Button
                android:id="@+id/btnTomarFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“¸ Tomar foto"
                android:backgroundTint="@color/teal_700"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp" />

            <!-- ðŸ”¹ Vista previa de la imagen -->
            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_border_button"
                android:contentDescription="Vista previa de la foto"
                android:visibility="gone" />

            <!-- ðŸ”¹ Servicios -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/servicesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ”¹ Notas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notas"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Agregar nota"
                android:background="@drawable/rounded_border_button"
                android:paddingHorizontal="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="22dp" />

            <!-- ðŸ”¹ Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/purple_700"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guardar"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/purple_700"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

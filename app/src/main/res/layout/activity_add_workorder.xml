<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="22dp"
    android:background="?attr/colorSurface"
    android:layout_gravity="center"
    android:clipToOutline="true">


    <!-- ðŸ”¹ Scroll general -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ðŸ”¹ Logo -->
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="180dp"
                android:layout_height="31dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/gestaller_logo" />

            <!-- ðŸ”¹ TÃ­tulo -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="Nuevo trabajo"
                android:textColor="@color/gestaller_blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- ðŸ”¹ Cliente -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente (nombre)"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etClientName"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_border_button"
                android:hint="Ingresar nombre"
                android:paddingHorizontal="20dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurface" />

            <!-- ðŸ”¹ Marca y Modelo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="10dp">

                <!-- Columna: Marca -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marca"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spBrand"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/rounded_border_button"
                        android:paddingHorizontal="20dp"
                        android:textColor="?attr/colorOnSurface"/>

                </LinearLayout>

                <!-- Columna: Modelo -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modelo"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spModel"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/rounded_border_button"
                        android:paddingHorizontal="20dp"
                        android:textColor="?attr/colorOnSurface"/>
                        />
                </LinearLayout>
            </LinearLayout>

            <!-- ðŸ”¹ Patente y URL imagen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/etPlate"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:hint="Chapa"
                    android:background="@drawable/rounded_border_button"
                    android:paddingHorizontal="20dp"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface" />

                <EditText
                    android:id="@+id/etImageUrl"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:hint="URL imagen"
                    android:background="@drawable/rounded_border_button"
                    android:paddingHorizontal="20dp"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface" />
            </LinearLayout>

            <!-- ðŸ”¹ Servicios -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/servicesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ”¹ Notas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notas"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="Agregar nota"
                android:background="@drawable/rounded_border_button"
                android:paddingHorizontal="20dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurface"
                android:layout_marginBottom="22dp" />

            <!-- ðŸ”¹ Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_border_button"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guardar"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_border_button"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

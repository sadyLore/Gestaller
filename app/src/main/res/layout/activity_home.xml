<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <!-- ðŸ”¹ CONTENIDO PRINCIPAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- ðŸ”¹ Barra superior -->

        <!-- ðŸ”¹ Buscador -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Logo Gestaller -->
            <ImageView
                android:layout_width="198dp"
                android:layout_height="36dp"
                android:contentDescription="Logo Gestaller"
                android:src="@drawable/gestaller_logo" />

            <!-- MenÃº hamburguesa -->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="MenÃº"
                android:src="@drawable/ic_menu"
                app:tint="@color/gestaller_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_search_box"
            android:paddingHorizontal="16dp"
            android:layout_margin="16dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Buscar..."
                android:background="@null"
                android:paddingVertical="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_600" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:tint="@color/gestaller_blue"
                android:contentDescription="Buscar" />
        </LinearLayout>

        <!-- ðŸ”¹ Botones principales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btnClientes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gestaller_blue_light"
                android:text="Clientes"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnVehiculos"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="VehÃ­culos"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/gestaller_blue_light"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btnTrabajos"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Trabajos"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/gestaller_blue_light"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/btnServicios"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Servicios"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/gestaller_blue_light"
                android:layout_marginHorizontal="4dp" />
        </LinearLayout>

        <!-- ðŸ”¹ TÃ­tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trabajos recientes"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" />

        <!-- ðŸ”¹ Lista de trabajos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerWorkOrders"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false" />

        <!-- ðŸ”¹ BotÃ³n flotante (+) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="24dp"
            android:src="@drawable/ic_add"
            app:tint="@color/white"
            app:backgroundTint="@color/gestaller_blue"
            android:contentDescription="Agregar trabajo" />
    </LinearLayout>

    <!-- ðŸ”¹ Drawer lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemTextColor="@color/black"
        app:itemTextAppearance="@style/DrawerItemText"
        android:paddingStart="12dp"
        android:gravity="start" />


</androidx.drawerlayout.widget.DrawerLayout>

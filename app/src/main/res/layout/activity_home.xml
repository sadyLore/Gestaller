<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <!-- ðŸ”¹ Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Barra superior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Logo Gestaller -->
            <ImageView
                android:layout_width="180dp"
                android:layout_height="36dp"
                android:contentDescription="Logo Gestaller"
                android:src="@drawable/gestaller_logo" />

            <!-- MenÃº hamburguesa -->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="MenÃº"
                android:src="@drawable/ic_menu"
                app:tint="@color/gestaller_blue" />
        </LinearLayout>

        <!-- Buscador -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_search_box"
            android:paddingHorizontal="16dp"
            android:layout_margin="16dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Buscar..."
                android:background="@null"
                android:paddingVertical="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_600" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:tint="@color/gestaller_blue"
                android:contentDescription="Buscar" />
        </LinearLayout>

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trabajos recientes"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Lista de trabajos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerWorkOrders"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false" />

        <!-- BotÃ³n flotante -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="24dp"
            android:src="@drawable/ic_add"
            app:tint="@color/white"
            app:backgroundTint="@color/gestaller_blue"
            android:contentDescription="Agregar trabajo" />
    </LinearLayout>

    <!-- Drawer lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:menu="@menu/drawer_menu"
        app:itemTextColor="@color/black"
        app:itemIconTint="@color/gestaller_blue"
        app:itemTextAppearance="@style/DrawerItemText" />
</androidx.drawerlayout.widget.DrawerLayout>

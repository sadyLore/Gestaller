<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.LoginActivity">

    <!-- 游댳 Encabezado con logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="234dp"
            android:layout_height="51dp"
            android:contentDescription="Logo Gestaller"
            android:src="@drawable/gestaller_logo" />
    </LinearLayout>

    <!-- 游댳 Imagen del mec치nico -->
    <ImageView
        android:id="@+id/loginImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/login_header" />

    <!-- 游댳 Parte inferior azul curvada -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/bg_login_bottom"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Contenedor centrado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Usuario -->
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_login_input"
                android:hint="Ingrese usuario"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <!-- Contrase침a -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_login_input"
                android:hint="Ingrese contrase침a"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <!-- Bot칩n -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:background="@drawable/bg_login_input"
                android:text="Iniciar sesi칩n"
                android:textAllCaps="false"
                android:textColor="@color/gestaller_blue_light"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

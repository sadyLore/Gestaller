<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 📸 Imagen -->
        <ImageView
            android:id="@+id/imgWorkOrder"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_border_button"
            android:contentDescription="Imagen del trabajo" />

        <!-- 🧾 Nombre del cliente -->
        <TextView
            android:id="@+id/tvClientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del cliente"
            android:textColor="@color/gestaller_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 🚗 Vehículo -->
        <TextView
            android:id="@+id/tvVehicleInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marca Modelo - Chapa"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- ☎️ Teléfono -->
        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- 🔧 Servicios -->
        <TextView
            android:id="@+id/tvServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Servicios realizados"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- 📝 Notas -->
        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notas"
            android:textColor="@color/gestaller_gray"
            android:textSize="15sp"
            android:layout_marginBottom="16dp" />

        <!-- 📅 Fecha -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textColor="@color/gestaller_gray"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- 🔘 Botón cerrar -->
        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_700"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</ScrollView>

        android:layout_marginBottom="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción del trabajo" />

    <!-- Aquí agregarás más campos y un botón para guardar -->

</LinearLayout>

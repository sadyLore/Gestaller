<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ðŸ”¹ TÃ­tulo -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trabajo #1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gestaller_blue"/>

        <!-- ðŸ”¹ Cliente / VehÃ­culo -->
        <TextView
            android:id="@+id/tvClientVehicle"
            android:layout_below="@id/tvTitle"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente: Juan / VehÃ­culo: Toyota Corolla"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <!-- ðŸ”¹ Precio -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_below="@id/tvClientVehicle"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: Gs. 120.000"
            android:textSize="15sp"
            android:textColor="@color/gestaller_gray"/>

        <!-- ðŸ”¹ Fecha -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_below="@id/tvPrice"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: 27/10/2025"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- ðŸ”¹ BotÃ³n de menÃº -->
        <ImageView
            android:id="@+id/btnMoreOptions"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="MÃ¡s opciones"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>

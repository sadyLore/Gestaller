<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- â‹® MenÃº de tres puntos -->
        <ImageView
            android:id="@+id/btnMoreOptions"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="Opciones"
            app:tint="@color/gestaller_gray" />

        <!-- ðŸ§¾ Nombre del cliente -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gestaller_blue"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_toStartOf="@id/btnMoreOptions"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- ðŸš— VehÃ­culo y chapa -->
        <TextView
            android:id="@+id/tvClientVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- ðŸ’° Precio -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvClientVehicle"
            android:textColor="@color/gestaller_gray"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- ðŸ“… Fecha -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPrice"
            android:textColor="@color/gestaller_gray"
            android:textSize="13sp"
            android:layout_marginTop="3dp" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>

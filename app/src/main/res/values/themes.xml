<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema Claro con paleta Gestaller -->
    <style name="Theme.Gestaller" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- BRAND: se mantiene en ambos modos -->
        <item name="colorPrimary">@color/gestaller_blue</item>
        <item name="colorPrimaryVariant">@color/gestaller_blue_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Superficies / texto -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Secundarios / contenedores -->
        <item name="colorSecondary">@color/gestaller_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurfaceVariant">@color/gestaller_gray</item>

        <!-- Componentes -->
        <item name="materialAlertDialogTheme">@style/App.MaterialAlertDialogTheme</item>
        <item name="android:statusBarColor">@color/gestaller_blue</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!-- Estilo para diálogos con esquinas redondeadas -->
    <style name="App.MaterialAlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Dialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/App.Title.Light</item>
    </style>

    <style name="App.Title.Light" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/gestaller_blue</item>
    </style>

    <style name="ShapeAppearance.App.Dialog" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <!-- Estilos de tipografía con sans-serif -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item> <!-- Medium weight -->
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item> <!-- Medium weight -->
    </style>

    <!-- Estilo para botones redondeados -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Button</item>
    </style>

    <style name="ShapeAppearance.App.Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

</resources>
